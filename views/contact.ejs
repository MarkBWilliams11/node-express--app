<%- include("./partials/head.ejs") -%>

  <body>

    <%- include("./partials/nav.ejs") -%>

      <!-- Showcase -->
      <div class="container">
        <div class="text-center">
          <h1>
            <%= title %>
          </h1>
          </p>
          <p class="lead">
            <%= message %>
          </p>
        </div>
      </div>




      <!-- form 2 -->
      <section>
        <div class="container-lg  ">
          <div class="text-center">
            <p class="lead">Need to ask a question?</p>
          </div>
          <!-- form -->
          <div class="row justify-content-center my-5">
            <div class="col-lg-6">
              <form action="">
                <!--label email group -->
                <label for="email" class="form-label">Email Address:</label>
                <div class="mb-4 input-group">
                  <span class="input-group-text">

                    <i class="bi bi-at"></i>
                  </span>
                  <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com">
                  <!--email tooltip -->
                  <span class="input-group-text">
                    <span data-bs-toggle="tooltip" data-bs-placement="bottom" title="Enter an email we and reply to">
                      <i class="bi bi-question-circle text-muted"></i>
                    </span>
                  </span>
                </div>
                <!-- name group -->
                <label for="name" class="form-label">Name:</label>
                <div class="input-group mb-4">
                  <span class="input-group-text">
                    <i class="bi bi-person-fill"></i>
                  </span>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name">
                </div>
                <!-- question selection group -->
                <label for="name" class="form-label">What is your question about?</label>
                <div class="input-group mb-4">
                  <span class="input-group-text">
                    <i class="bi bi-chat-left-dots-fill"></i>
                  </span>
                  <select name="subject" id="subject" class="form-select">
                    <option value="pricing" selected>Project</option>
                    <option value="content">Other</option>
                  </select>
                </div>
                <!-- question textarea group -->
                <label for="query" class="form-label">your question?</label>
                <textarea id="query" cols="30" rows="10" class="form-control" name="contact-body"></textarea>
                <div class="mt-3 mb-4 text-center">
                  <button class="btn" id="main_button">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
      <!-- sidebar -->
      <%- include("./partials/sidebar.ejs") -%>
        <!-- footer -->
        <%- include("./partials/footer.ejs") -%>
          <!-- js -->
          <%- include("./partials/bootstrapjs.ejs") -%>
  </body>

  </html>